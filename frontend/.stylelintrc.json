{
  "extends": ["stylelint-config-standard"],
  "plugins": ["stylelint-order"],
  "rules": {
    "order/properties-order": [
      "position",
      "z-index",
      "display",
      "flex-*",
      "grid-*",
      "width",
      "height",
      "margin",
      "padding",
      "border",
      "border-*",
      "box-sizing",
      "outline",
      "overflow",
      "resize",
      "opacity",
      "float",
      "clear",
      "font",
      "font-*",
      "color",
      "background",
      "background-*",
      "list-style",
      "list-style-*",
      "text-align",
      "text-*",
      "white-space",
      "vertical-align",
      "animation",
      "animation-*",
      "transition",
      "transition-*"
    ],
    "comment-empty-line-before": null,
    "selector-class-pattern": null,
    "color-function-alias-notation": null,
    "alpha-value-notation": null,
    "property-no-vendor-prefix": null
  }
}
